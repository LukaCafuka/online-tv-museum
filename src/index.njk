---
title: Home
layout: 'base.njk'
lang: en
---

<h2>{{ site.t[lang].equipment }}</h2>
<div id="gear-grid" class="ui-helper-clearfix">
		{% for g in collections.equipment %}
			{% set d = g.data.description[lang] %}
			{% set gallery = galleries[g.data.slug] %}
			{% if gallery and gallery.length %}
			  {% set hero = gallery[0] %}
			{% else %}
			  {% set hero = g.data.image %}
			{% endif %}
			<div class="gear-item ui-widget ui-widget-content ui-corner-all">
				<a class="gear-link" href="/equipment/{{ g.data.slug }}/" style="display:block; color:inherit;">
					<span class="tag ui-corner-all">{{ g.data.category }}</span>
					<img src="{{ hero }}" alt="{{ g.data.brand }} {{ g.data.model }}" loading="lazy" />
					<strong>{{ g.data.brand }} {{ g.data.model }}</strong><br/>
					<small>{{ site.t[lang].year }}: {{ g.data.year }}</small>
					<p style="font-size:0.8rem; line-height:1.2; margin-top:0.4rem;">{{ d.short or d.long or d }}</p>
				</a>
				<p style="margin:0; text-align:right; font-size:0.7rem;"><a class="details-link" href="/equipment/{{ g.data.slug }}/">{{ site.t[lang].details }} Â»</a></p>
			</div>
		{% endfor %}
</div>
